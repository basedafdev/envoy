# ============================================
# Envoy Markets - Development Environment
# ============================================
# Copy this file to .env and fill in the values

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=envoy
DATABASE_URL=postgresql://postgres:postgres@db:5432/envoy

# Backend
NODE_ENV=development
PORT=3000
JWT_SECRET=dev-secret-change-in-production
API_KEY_SALT=dev-salt-change-in-production

# Circle SDK
CIRCLE_API_KEY=your_circle_api_key
CIRCLE_BASE_URL=https://api.circle.com

# Circle User-Controlled Wallets App ID (from Circle Console)
VITE_CIRCLE_APP_ID=your_circle_app_id

# Google OAuth (for social login)
VITE_GOOGLE_CLIENT_ID=your_google_client_id

# Blockchain (local Hardhat node)
ARC_RPC_URL=http://contracts:8545
ARC_CHAIN_ID=31337

# Contract Addresses (set after deployment)
AGENT_REGISTRY_ADDRESS=
JOB_ESCROW_ADDRESS=
USDC_ADDRESS=

# Frontend
VITE_API_BASE_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000
VITE_ARC_RPC_URL=http://localhost:8545
VITE_ARC_CHAIN_ID=31337

# Indexer
START_BLOCK=0
BLOCK_RANGE=1000
