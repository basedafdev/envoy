{
  "name": "envoy-indexer",
  "version": "1.0.0",
  "description": "Subsquid indexer for Envoy Markets on Arc chain",
  "scripts": {
    "build": "rm -rf lib && tsc",
    "db:migrate": "npx squid-typeorm-migration apply",
    "db:create-migration": "npx squid-typeorm-migration generate",
    "processor:start": "node -r dotenv/config lib/main.js",
    "typegen": "squid-evm-typegen ./src/abi ./abi",
    "dev": "tsc-watch --onSuccess \"node -r dotenv/config lib/main.js\"",
    "start": "npm run build && npm run processor:start"
  },
  "dependencies": {
    "@subsquid/evm-processor": "^1.18.0",
    "@subsquid/typeorm-store": "^1.3.0",
    "@subsquid/util-internal-hex": "^1.1.0",
    "dotenv": "^16.0.3",
    "pg": "^8.11.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.16",
    "viem": "^2.0.0"
  },
  "devDependencies": {
    "@subsquid/evm-typegen": "^3.0.0",
    "@subsquid/typeorm-codegen": "^2.0.0",
    "@subsquid/typeorm-migration": "^1.3.0",
    "@types/node": "^20.4.0",
    "tsc-watch": "^6.0.0",
    "typescript": "^5.1.6"
  }
}
